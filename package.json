{
  "name": "lumbridge-threejs",
  "version": "1.0.0",
  "description": "A RuneScape Lumbridge recreation using Three.js with enhanced 32-bit graphics",
  "type": "module",
  "scripts": {
    "dev": "python -m http.server 8000",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "runescape",
    "lumbridge",
    "threejs",
    "webgl",
    "game",
    "3d",
    "osrs"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/three": "^0.181.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.ts$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/main.{js,ts}",
      "!src/game/GameLogic.{js,ts}",
      "!src/ui/UIManager.{js,ts}",
      "!src/world/Lumbridge.{js,ts}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "dependencies": {
    "three": "^0.181.0"
  }
}
