{
  "name": "lumbridge-threejs",
  "version": "1.0.0",
  "description": "A RuneScape Lumbridge recreation using Three.js with enhanced 64-bit HDR graphics and PBR materials",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "runescape",
    "lumbridge",
    "threejs",
    "webgl",
    "game",
    "3d",
    "osrs"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.28.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/three": "^0.181.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "vite": "^7.2.4"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ],
    "transform": {
      "^.+\\.(js|ts)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(three)/)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": ["ts", "js", "json"],
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/main.ts",
      "!src/main.js",
      "!src/game/GameLogic.ts",
      "!src/game/GameLogic.js",
      "!src/ui/UIManager.ts",
      "!src/ui/UIManager.js",
      "!src/world/Lumbridge.ts",
      "!src/world/Lumbridge.js",
      "!src/engine/PostProcessingManager.ts",
      "!src/engine/PostProcessingManager.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "dependencies": {
    "three": "^0.181.0"
  }
}
